<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/mint"
    android:padding="16dp">

    <TextView
        android:id="@+id/addclass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/kanit_semibold"
        android:text="เพิ่มห้องเรียน"
        android:textColor="#000000"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/kanit_semibold"
        android:text="ชื่อวิชา"
        android:textColor="#000000"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/etSubject"
        android:layout_width="379dp"
        android:layout_height="45dp"
        android:background="@drawable/border_edittext"
        android:ems="10"
        android:fontFamily="@font/kanit_semibold"
        android:hint="ชื่อวิชา"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/kanit_semibold"
        android:text="รหัสวิชา"
        android:textColor="#000000"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/etSubject_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_edittext"
        android:ems="10"
        android:fontFamily="@font/kanit_semibold"
        android:hint="รหัสวิชา"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/kanit_semibold"
        android:text="ตอนเรียน"
        android:textColor="#000000"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/etSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_edittext"
        android:ems="10"
        android:fontFamily="@font/kanit_semibold"
        android:hint="ตอนเรียน"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/TextView99"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/kanit_semibold"
        android:text="เวลา"
        android:textColor="#000000"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/etTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_edittext"
        android:ems="10"
        android:fontFamily="@font/kanit_semibold"
        android:hint="เวลา"
        android:inputType="textPersonName|time"
        android:padding="10dp"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txtShow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_AddT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/button"
        android:fontFamily="@font/kanit_semibold"
        android:text="สร้าง"
        android:textSize="20dp"
        android:textStyle="bold" />

</LinearLayout>