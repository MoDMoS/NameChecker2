<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="th.ac.kmutnb.namechecker">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.NameChecker"
        android:networkSecurityConfig="@xml/network_security_config">

        <!--Login-->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Register"
            android:exported="false"
            android:label="Sign up">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <!--Student-->
        <activity
            android:name=".Student_main"
            android:exported="false"
            android:label="Main">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".Addclass_Student"
            android:exported="false"
            android:label="Add Class">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".DetailpageStudentclass"
            android:exported="false"
            android:label="Class Detail">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".Cheackname"
            android:exported="false"
            android:label="Cheackname">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <!--Teacher-->
        <activity
            android:name=".Teacher_main"
            android:exported="false"
            android:label="Main">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".Addclass_Teacher"
            android:exported="false"
            android:label="Add class">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Teacher_main" />
        </activity>
        <activity
            android:name=".Teacher_class_info"
            android:exported="false"
            android:label="Class Detail">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Teacher_main" />
        </activity>
        <activity
            android:name=".Generate_Pass"
            android:exported="false"
            android:label="Genarate password">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Teacher_class_info" />
        </activity>
        <activity
            android:name=".Teacher_student_list"
            android:exported="false"
            android:label="Student list">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Teacher_class_info" />
        </activity>
    </application>

</manifest>